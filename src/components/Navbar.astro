---
import Link from "@/components/Link.astro";
import navigation from "@/data/navigation.json";
---

<nav
  class="fixed z-50 rounded-full bottom-3 right-3 sm:overflow-x-visible bg-neutral-800/80 sm:w-auto"
>
  <ul class="flex items-center justify-start">
    {
      navigation.map((item) => (
        <li>
          <Link {...item} />
        </li>
      ))
    }
  </ul>
</nav>
