---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import bannerImage from "@/images/heroImage/gallery.jpg";
import galleryThumbnails from "@/data/gallery.json";
---

<Layout title="Gallery | satori.arw">
  <main>
    <section class="relative text-center">
      <Image src={bannerImage} alt="Image" class="object-cover bg-fixed" />
      <div class="absolute top-0 left-0 w-full h-full bg-secondary/30">
        <h1
          class="absolute text-2xl font-bold text-white transform -translate-x-1/2 -translate-y-1/2 md:text-8xl top-1/2 left-1/2"
          transition:name="gallery-title"
        >
          Gallery
        </h1>
      </div>
    </section>
    <section class="container my-12 text-xl text-center">
      <p class="pb-8 text-sm md:text-lg">
        Here are some of the photos I've taken over the years. Hover to view the
        categories
      </p>
      <div
        class="flex flex-col space-y-4 md:space-y-0 md:justify-evenly md:flex-row"
      >
        <!-- Gallery Thumbnails -->
        {
          galleryThumbnails.map((thumbnail) => (
            <div class="relative h-auto md:max-h-[50vh] aspect-camera group">
              <a href="#" target="_blank" rel="noopener noreferrer ">
                <img
                  src={thumbnail.url}
                  alt={thumbnail.name}
                  class="object-cover h-auto max-w-full transform bg-cover rounded-md md:w-full md:h-full"
                />

                <div class="absolute inset-0 flex items-center justify-center transition-opacity duration-300 ease-out rounded-md opacity-0 group-hover:opacity-100 bg-secondary/60">
                  <p class="text-lg md:text-xl font-bold text-white">
                    {thumbnail.name}
                  </p>
                </div>
              </a>
            </div>
          ))
        }
      </div>
    </section>
  </main>
</Layout>
