---
import { supabase } from "../db/supabase";

import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import bannerImage from "@/images/heroImage/gallery.jpg";

const { data: thumbnails, error } = await supabase
  .from("images")
  .select("*")
  .eq("folder", "thumbnails");
---

<Layout>
  <main>
    <section class="relative text-center">
      <Image
        src={bannerImage}
        alt="Image"
        class="object-cover bg-fixed aspect-[3/1]"
      />
      <div class="absolute top-0 left-0 w-full h-full bg-secondary/30">
        <h1
          class="absolute text-2xl font-bold text-white transform -translate-x-1/2 -translate-y-1/2 md:text-6xl lg:text-8xl top-1/2 left-1/2"
          transition:name="gallery-title"
        >
          Gallery
        </h1>
      </div>
    </section>
    <section class="container my-12 text-xl text-center">
      <p class="pb-8 text-sm md:text-lg">
        Here are some of the photos I've taken over the years. Hover to view the
        categories
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Gallery Thumbnails -->
        {
          thumbnails?.map((thumbnail) => (
            <div class="relative h-auto md:max-h-[50vh] aspect-sqaure group">
              <a
                href={thumbnail.href}
                target="_blank"
                rel="noopener noreferrer"
              >
                <img
                  src={thumbnail.url}
                  alt={thumbnail.name}
                  class="object-cover h-auto max-w-full bg-cover transform rounded-md md:w-full md:h-full"
                />

                <div class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-300 ease-out rounded-md group-hover:opacity-100 bg-secondary/60">
                  <p class="text-lg font-bold text-white md:text-xl lg:text-3xl">
                    {thumbnail.name}
                  </p>
                </div>
              </a>
            </div>
          ))
        }
      </div>
    </section>
  </main>
</Layout>
