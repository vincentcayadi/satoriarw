---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import bannerImage from "@/images/heroImage/gallery.jpg";
---

<Layout title="Gallery | satori.arw">
  <main>
    <section class="relative text-center">
      <Image src={bannerImage} alt="Image" class="object-cover bg-fixed" />
      <div class="absolute top-0 left-0 w-full h-full bg-primary-foreground/40">
        <h1
          class="absolute text-2xl font-bold text-white md:text-8xl top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
          transition:name="gallery-title"
        >
          Gallery
        </h1>
      </div>
    </section>
    <section
      class="container w-full h-screen mt-12 text-xl text-center grid gap-4 grid-cols-1 md:grid-cols-3 lg:grid-cols-4"
    >
      <div>Wildlife</div>
      <div>Automotive</div>
      <div>Street</div>
      <div>Sports</div>
    </section>
  </main>
</Layout>
