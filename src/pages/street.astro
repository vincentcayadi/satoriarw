---
import { supabase } from "../db/supabase";
import Layout from "@/layouts/Layout.astro";
import { Skeleton } from "@/components/ui/skeleton.tsx";

// Fetch the banner image
const { data: banner, error: bannerError } = await supabase
  .from("images")
  .select("*")
  .eq("folder", "banner")
  .eq("name", "street_banner");

// Fetch the gallery images
const { data: images, error: imagesError } = await supabase
  .from("gallery_images")
  .select("*")
  .eq("folder", "street")
  .order("id", { ascending: true });
---

<Layout>
  <section class="relative text-center">
    {
      banner && banner.length > 0 ? (
        <img
          src={banner[0].url}
          alt={banner[0].alt_text}
          class="object-cover bg-fixed"
        />
      ) : (
        <Skeleton className="aspect-[10/5]" />
      )
    }
    <div class="absolute top-0 left-0 w-full h-full bg-secondary/40">
      <h1
        class="absolute text-2xl font-bold text-white transform -translate-x-1/2 -translate-y-1/2 md:text-6xl lg:text-9xl top-1/2 left-1/2"
      >
        Street
      </h1>
    </div>
  </section>
  <section class="container my-12 columns-2xs">
    {
      images?.map((image) => (
        <div class="p-2 mb-6 duration-300 ease-in-out bg-white rounded-lg hover:scale-105 ">
          <img
            src={image.url}
            alt={image.alt}
            class="h-auto rounded-lg aspect-auto"
          />
        </div>
      ))
    }
  </section>
</Layout>
